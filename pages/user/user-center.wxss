/* user.wxss */
.center_header{background-color: #fff;padding: 12px;}
.center_header .box-center image{width: 50px;height: 50px;border-radius:50%;-webkit-border-radius:50%;vertical-align: middle;}
.center_header .link{display: inline-block;background-color: #1f6b9b;height:36px;line-height:36px;width:40%;text-align:center;color:#fff;margin-right: 12px;border-radius:5px;-webkit-border-radius:5px;font-size: 18px;border:1px solid #1f6b9b;}
.center_header .placeholder{padding-left:9px;}
.p_cen{text-align: center;}
.p_cen .link:last-child{background-color: #fff;color:#1f6b9b;margin-right: none;}
.name{font-size: 16px;color:#1a1a1a;}
.line_menus{margin: 6px 0;padding: 12px;background-color: #fff;}
.line_menus .weui-flex__item:first-child{border-right: 1px solid #ededed;}
.line_menus .weui-flex__item .placeholder{text-align: center;display: block;}
.line_menus .weui-flex__item .placeholder image,.icon_ft{width:25px;height:25px;vertical-align: middle;margin-top: -3px;margin-right: 6px;}
.icon-jiantou{font-size: 12px;color: #b9b9b9;}
.user_menu{background-color: #fff;margin-bottom: 19px;}
.user_posi{font-size: 14px;color: #aaa;display: block;}
.one_line{padding: 0 0 0 12px;}
.one_line .weui-flex__item{border-bottom: 1px solid #ededed;padding:12px 12px 12px 0;}
.one_line .icon_ft{margin-right:9px}
.one_line:last-child .weui-flex__item{border-bottom: none;}
.one_line .weui-flex__item .box-center{display: inline-block;float:right;}
