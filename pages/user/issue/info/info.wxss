/* info.wxss */
.iss_progress{background-color: #fff;padding: 14px;}
.iss_progress .weui-flex__item{position: relative;}
.iss_progress .weui-flex__item view{line-height: 1;}
.iss_progress .weui-flex__item .line{height: 2px;background-color: #ececec;position: absolute;top:19px;left:0;width: 100%;z-index: 1;}
.iss_progress .weui-flex__item .icons{display:block;margin: 0 auto;width:40px;height:40px;text-align:center;line-height:40px;background-color: #ececec;border-radius: 50%;-webkit-border-radius: 50%;color: #b2b2b2;position: relative;z-index: 2;}
.iss_progress .weui-flex__item .icons .iconfont{font-size:22px;vertical-align: middle;}
.iss_progress .weui-flex__item .icons.f4{line-height: 36px;}
.iss_progress .weui-flex__item .tit{text-align: center;color: #b2b2b2;font-size: 16px;padding-top: 10px;}
.iss_progress .weui-flex__item.active .line{background-color: #1f6b9b;}
.iss_progress .weui-flex__item.active .icons{background-color: #1f6b9b;color: #fff;}
.iss_progress .weui-flex__item.active .tit{color: #1f6b9b;}

.com_content{padding-bottom:0;}
.com_content .content2{color: #6c6c6c;}
.weui-cell.weui-cell_input{padding:0px 0 0 0;}
.weui-cell::before{border: none;}
.weui-label{width:60px}

.issue_jd{background-color: #fff;padding: 14px;}
.issue_jd .name_title{font-size: 16px;color:#1a1a1a;margin-bottom: 5px;}
.iss_pro_lis{font-size: 14px;line-height: 1.6;color: #6c6c6c;}

.issue_nopay{text-align: center;font-size: 14px;padding: 3rem 0 6rem;color: #b2b2b2;}
.issue_nopay view{display: inline-block;}
.issue_nopay .cor{color: #1f6b9b;}
